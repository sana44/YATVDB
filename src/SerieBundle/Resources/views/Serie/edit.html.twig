{% extends '::base.html.twig' %}

{% block body -%}


<div class="container addSerieForm">

	<form method="post" {{ form_enctype (edit_form) }} >

		{{ form_errors(edit_form) }}
   		<h2>Formulaire de modification de série</h2>
   		<p> Complète ce formulaire et vos modifications seront prises en compte et mises en ligne très prochainement par notre équipe! </p>

   		<div class="form-group">
            {{ form_label(edit_form.name, "Titre de la série: ") }}
            {{ form_errors(edit_form.name) }}
            {{ form_widget(edit_form.name, {'attr':{'class':'form-control'}}) }}
        </div>

        <div class="form-group">
            {{ form_label(edit_form.resume, "Synopsis et détails: ") }}
            {{ form_errors(edit_form.resume) }}
            {{ form_widget(edit_form.resume, {'attr':{'class':'form-control'}}) }}
        </div>

        <div class="form-group">
            {{ form_label(edit_form.release_date, "Date de réalisation: ") }}
            {{ form_errors(edit_form.release_date) }}
            {{ form_widget(edit_form.release_date, {'attr':{'class':'form-control'}}) }}
        </div>

        <div class="form-group">
            {{ form_label(edit_form.image.file, "Affiche de la série: ") }}
            {{ form_widget(edit_form.image.file, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(edit_form.image.file) }}
        </div>

        <div class="form-group">
            {{ form_label(edit_form.category, "Genre: ") }}
                <ul>
                {% for c in edit_form.category %}
                    <li style="list-style-type: none">
                        {{ form_widget(c) }}
                         {{ form_label(c) }}
                    </li>
                {% endfor %}
                </ul>
        </div>


	{{form_rest(edit_form)}}
	
	
	 <div class="row">
	    <div class="col-lg-offset-9 col-lg-1">
		 	<a href="{{ path('serie_showCategories') }}" class="btn btn-lg btn-danger pull-right">Annuler</a>
		</div>
		<div class="col-lg-2 text-left">
		 	<input type="submit" value="Ajouter" class="btn btn-lg btn-primary"/>
		</div>
	</div>
 </form>
</div>
   
{% endblock %}
