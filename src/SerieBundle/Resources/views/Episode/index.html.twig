{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Episode list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Episodenumber</th>
                <th>Name</th>
                <th>Resume</th>
                <th>Diffusiondate</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('episode_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.episodeNumber }}</td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.resume }}</td>
                <td>{% if entity.diffusionDate %}{{ entity.diffusionDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('episode_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('episode_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('episode_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
